
{
  "compilerOptions": {
    "target": "ES6",
    // "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./", // Optional, helps with relative imports if needed
    "paths": {
      "*": ["src/*"] // Map imports to the "src" folder
    }
    // "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
